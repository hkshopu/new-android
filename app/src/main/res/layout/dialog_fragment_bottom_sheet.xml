<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:background="@drawable/custombackground_buyer_bottom_sheet_dialog"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="100dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/textView_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="水果禮盒"/>
            <TextView
                android:id="@+id/tv_title_time_for_stocking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/textView_product_name"
                android:textSize="12sp"
                android:textColor="@color/bright_red"
                android:text="@string/days_for_stocking"/>

            <TextView
                android:id="@+id/tv_value_time_for_stocking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@id/textView_product_name"
                android:layout_toRightOf="@id/tv_title_time_for_stocking"
                android:textSize="12sp"
                android:textColor="@color/bright_red"
                android:text="0"/>


            <TextView
                android:id="@+id/textView_product_price_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginRight="35dp"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/hkshop_color"
                android:textStyle="bold"
                android:text="HKD$ 300 - 400" />

            <TextView
                android:id="@+id/tv_title_product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@id/textView_product_price_range"
                android:textSize="12sp"
                android:layout_toLeftOf="@id/tv_value_product_quantity"
                android:textColor="@color/bright_gray"
                android:textStyle="bold"
                android:text="@string/products_quantity" />
            <TextView
                android:id="@+id/tv_value_product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginRight="35dp"
                android:layout_below="@id/textView_product_price_range"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/bright_gray"
                android:textStyle="bold"
                android:text="0" />


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/description_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/tv_title_specs_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:text="規格"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/r_view_item_spec_first"
                android:layout_below="@id/tv_title_specs_first"
                android:layout_width="match_parent"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/description_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/tv_title_specs_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:text="尺寸"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/r_view_item_spec_second"
                android:layout_below="@id/tv_title_specs_second"
                android:layout_width="match_parent"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/description_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/tv_title_quantitiy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:text="@string/quantity"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic_math_subtract"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_math_subtract"/>
                <TextView
                    android:id="@+id/tv_value_quantitiy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="0"/>
                <ImageView
                    android:id="@+id/ic_math_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:src="@mipmap/ic_math_add"/>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>