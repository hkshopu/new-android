<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorShopBack">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_shopDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_shopCover"
                    android:layout_width="match_parent"
                    android:layout_height="285dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/banner" />

                <TextView
                    android:id="@+id/tv_shopCoverset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="設定封面"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/iv_shopCoveradd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:paddingEnd="15dp"
                    android:paddingBottom="15dp"
                    android:src="@mipmap/ic_add" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/customborder"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp">

                <RelativeLayout
                    android:id="@+id/layout_shopImg"
                    android:layout_width="80dp"
                    android:layout_height="85dp">

                    <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_shopImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_shop_default"
                        app:riv_border_color="@color/white"
                        app:riv_border_width="2dp"
                        app:riv_corner_radius="50dp" />

                    <ImageView
                        android:id="@+id/iv_shopImgadd"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:src="@mipmap/ic_shop_plus" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_shoptitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_toEndOf="@id/layout_shopImg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shoptitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店舖名稱"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:src="@mipmap/ic_shop_name" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_addShop_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_shoptitle"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/layout_shopImg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addShop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="店舖詳細"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:src="@mipmap/ic_shop_detail" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_shop_setting"
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="25dp"
                    android:text="設定" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_shopsetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/customborder"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_shopsetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/shop_category"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layout_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_shopsetting"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_category1"
                        android:layout_width="108dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_category1"
                            android:layout_width="105dp"
                            android:layout_height="35dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/customborder_category"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/delete_category1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:src="@mipmap/btn_delete" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_category2"
                        android:layout_width="108dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_category2"
                            android:layout_width="105dp"
                            android:layout_height="35dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/customborder_category"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/delete_category2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:src="@mipmap/btn_delete" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_category3"
                        android:layout_width="108dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_category3"
                            android:layout_width="105dp"
                            android:layout_height="35dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/customborder_category"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/delete_category3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:src="@mipmap/btn_delete" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_addcategory"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_category"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/customborder"
                        android:gravity="center"
                        android:text="+ 新增分類"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_categorylist"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_shopsetting"
                    android:background="@drawable/customborder_catelist"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tv_confirm_shipping"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@id/list_category"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/customborder_catelist"
                        android:text="@string/alert_confirm"
                        android:visibility="gone"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_addcategory"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/payment_method"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layout_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_payment"
                    android:orientation="horizontal"
                    android:paddingStart="40dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_paypal_dis" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:src="@mipmap/ic_googlepay_dis" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:src="@mipmap/ic_bank_dis" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_Shippingfee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_payment"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_Shippingfee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="@string/shipfee_setting"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layout_fee_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_Shippingfee"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/layout_fee_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/delete_fee1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@mipmap/btn_delete" />

                            <TextView
                                android:id="@+id/tv_fee_more"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:paddingLeft="4dp"
                                android:text="@string/fee_more"
                                android:textColor="@color/material_grey_700"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/et_fee_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="$xxx"
                                android:textColor="@color/material_grey_700"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/et_fee_more_last"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:paddingLeft="4dp"
                                android:text="@string/fee_no"
                                android:textColor="@color/material_grey_700"
                                android:textSize="14sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/layout_fee_fix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/delete_fee2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@mipmap/btn_delete" />

                            <TextView
                                android:id="@+id/tv_fee_fix"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:paddingLeft="4dp"
                                android:text="@string/fee_more"
                                android:textColor="@color/material_grey_700"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/et_fee_fix1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="$xxx"
                                android:textColor="@color/material_grey_700"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_fee_fixto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:paddingLeft="4dp"
                                android:text="@string/fee_to"
                                android:textColor="@color/material_grey_700"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/et_fee_fix2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="$xxx"
                                android:textColor="@color/material_grey_700"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_fee_fix_last"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:paddingLeft="4dp"
                                android:text="@string/fee_fix"
                                android:textColor="@color/material_grey_700"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/et_fee_fix3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="$xxx"
                                android:textColor="@color/material_grey_700"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/et_fee_fix3_last"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:paddingLeft="4dp"
                                android:text="@string/fee_unit"
                                android:textColor="@color/material_grey_700"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_fee_setting_add"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/customborder"
                        android:text="+ 新增條件" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_Shippingfee"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_save_dis" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_addproduct"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/customborder"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_add" />

                <TextView
                    android:id="@+id/addProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="@string/add_product"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_shopinfo_upload"
                style="@style/buttonStyleShopInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_addproduct"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>