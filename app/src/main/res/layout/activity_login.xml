<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/turquoise">


        <ImageView
            android:id="@+id/titleBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:drawablePadding="6dp"
            android:padding="10dp"
            android:src="@mipmap/ic_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/titleBack"
            android:text="@string/please_login"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/layout_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <com.hkshopu.hk.widget.view.ETextWithDelete
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_edit_login"
                    android:hint="@string/hint_password"
                    android:paddingLeft="4dp"
                    android:inputType="textEmailAddress"
                    app:delSrc="@mipmap/ic_edit_del_1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_Pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_below="@+id/layout_Phone"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    />

                <com.hkshopu.hk.widget.view.ETextWithDelete
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/password1"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_edit_login"
                    android:paddingLeft="4dp"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    app:delSrc="@mipmap/ic_edit_del_1" />
            </LinearLayout>
        </LinearLayout>

        <Button
            style="@style/buttonStyle"
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="130dp"
            android:layout_below="@id/layout_Pwd"
            android:text="@string/login"
            android:textSize="18sp"
            />


        <TextView
            android:id="@+id/goRetrieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/btnLogin"
            android:padding="10dp"
            android:text="@string/forgetpassword"
            android:textColor="#999" />

    <TextView
        android:id="@+id/goRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/goRetrieve"
        android:padding="10dp"
        android:text="@string/sign_up"
        android:textColor="#999" />

    </RelativeLayout>
</LinearLayout>
